<div class="page-header">
  <h3>Character #<%= @character.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Movie</dt>
      <dd>
        <% if @character.movie != nil %>  <!-- alternatively, you could write `if movie.director.present?` -->
        <a href="/movies/<%= @character.movie_id %>">
        <%= @character.movie.title %>
        <% else %>
        No movie selected
        <% end %>
</dd> </a>


      <dt>Actor</dt>
      <dd>
        <% if @character.actor != nil %>  <!-- alternatively, you could write `if movie.director.present?` -->
        <a href="/movies/<%= @character.actor_id %>">
        <%= @character.actor.name %>
        <% else %>
        No actor selected
        <% end %>

      </dd> </a>

      <dt>Name</dt>
      <dd><%= @character.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/characters" class="btn btn-primary">
        Back
      </a>
      <a href="/characters/<%= @character.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_character/<%= @character.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
